generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String   @unique
  rut       String   @unique
  password  String   @db.Char(60)
  tickets   Ticket[]
}

model Client {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  email      String   @unique
  rut        String   @unique
  companyRut String
  password   String   @db.Char(60)
  tickets    Ticket[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      Status   @default(OPEN)
  priority    Priority
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  Client      Client   @relation(fields: [clientId], references: [id])
  clientId    Int
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
